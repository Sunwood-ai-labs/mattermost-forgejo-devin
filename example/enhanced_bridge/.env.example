# ===========================================
# Enhanced Bridge 用 環境変数サンプル
# ===========================================

# Forgejo OAuth2設定
FORGEJO_URL=http://your-forgejo-server:3000
FORGEJO_CLIENT_ID=your_oauth2_client_id_here
FORGEJO_CLIENT_SECRET=your_oauth2_client_secret_here

# Webhook設定
WEBHOOK_SECRET=your_webhook_secret_here

# Mattermost設定
MATTERMOST_TOKEN=your_mattermost_slash_command_token_here
MATTERMOST_WEBHOOK_URL=http://your-mattermost-server:8065/hooks/your_incoming_webhook_id
MATTERMOST_API_URL=http://your-mattermost-server:8065
MATTERMOST_API_TOKEN=your_mattermost_api_token_here

# アプリケーション設定
BASE_URL=http://your-server-ip:5005
FLASK_SECRET_KEY=your-random-secret-key-here
PORT=5005
DEBUG=false